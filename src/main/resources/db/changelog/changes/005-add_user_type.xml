<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="005-add_user" author="tomas.gramblicka">

        <addColumn tableName="user">
            <column name="type" type="VARCHAR2(20)" defaultValue="TEACHER">
                <constraints nullable="false"/>
            </column>
        </addColumn>


        <sql>INSERT INTO user (id, password, username, created_on, updated_on, type)
            select next value for vst_seq, 'admin', 'admin', now(), now(), 'ADMIN';
        </sql>


        <rollback>
            <dropColumn tableName="user" columnName="type"></dropColumn>
            <sql>DELETE FROM user where TYPE = 'AMDIN';</sql>
        </rollback>
    </changeSet>
</databaseChangeLog>
